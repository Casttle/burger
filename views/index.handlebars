<h1>Eat the Burger</h1>

<div id="newBurgers">
<h2>Burgers to Eat</h2>
<ul>
  {{#each burger}}
    {{#unless devoured}}
     <li> {{burger_name}} </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div id="oldBurgers">
<h2>Burger Eaten</h2>
<ul>
  {{#each burger}}
    {{#if devoured}}
      <li> {{burger_name}} </li>
    {{/if}}
  {{/each}}
</ul>
</div>
<h2>Make a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bur">Burger Name:</label>
    <input type="text" id="bur" name="burger_name">
  </div>

  <button type="submit">Make Burger</button>
</form>